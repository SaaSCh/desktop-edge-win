<UserControl x:Class="ZitiDesktopEdge.UrlEntryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZitiDesktopEdge"
        mc:Ignorable="d"
             Background="#80000000"
    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Please enter the URL:" Margin="0,0,0,10" FontSize="14"/>
                <TextBox x:Name="UrlTextBox" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="OK" Width="75" Margin="0,0,5,0" Click="OkButton_Click"/>
                    <Button Content="Cancel" Width="75" Click="CancelButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
